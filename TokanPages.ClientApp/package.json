{
    "name": "tomkandula",
    "version": "1.0.0",
    "private": true,
    "description": "Main client application project",
    "dependencies": {
        "@material-ui/core": "^4.12.3",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.60",
        "aos": "^2.3.4",
        "axios": "1.6.0",
        "dompurify": "^2.4.3",
        "jwt-decode": "^3.1.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-emoji-render": "^1.2.4",
        "react-redux": "^7.2.6",
        "react-router": "^5.2.1",
        "react-router-dom": "^5.2.1",
        "react-scripts": "^5.0.0",
        "react-scroll": "^1.8.5",
        "react-syntax-highlighter": "^15.4.5",
        "redux": "^4.1.2",
        "redux-thunk": "^2.4.1",
        "uuid": "^9.0.0",
        "validate.js": "^0.13.1"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-0",
        "@babel/plugin-proposal-private-property-in-object": "^7.20.5",
        "@babel/plugin-syntax-flow": "^7.14.5",
        "@babel/plugin-transform-react-jsx": "^7.14.9",
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "@testing-library/jest-dom": "^5.16.2",
        "@types/aos": "^3.0.4",
        "@types/dompurify": "^2.4.0",
        "@types/enzyme": "^3.10.11",
        "@types/history": "4.7.3",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.19",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/react-redux": "^7.1.22",
        "@types/react-router-dom": "^5.3.3",
        "@types/react-scroll": "^1.8.3",
        "@types/react-syntax-highlighter": "^13.5.2",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.12.1",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
        "clsx": "^1.2.1",
        "connected-react-router": "^6.9.2",
        "cross-env": "^7.0.3",
        "enzyme": "^3.11.0",
        "enzyme-to-json": "^3.6.2",
        "eslint": "^8.9.0",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.28.0",
        "gzipper": "^7.2.0",
        "history": "4.7.2",
        "husky": "^8.0.3",
        "jest": "^27.0.0",
        "jest-react-hooks-shallow": "^1.5.1",
        "ts-jest": "^27.1.3",
        "typescript": "^4.6.4"
    },
    "resolutions": {
        "**/react": "17.0.2",
        "**/react-dom": "17.0.2"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "scripts": {
        "shared-test": "jest --setupFiles dotenv/config --env=jsdom --verbose ./Shared",
        "comp-test": "jest --setupFiles dotenv/config --env=jsdom --verbose ./Components",
        "app-test": "jest --setupFiles dotenv/config --env=jsdom --verbose",
        "dom-test": "cross-env CI=true react-scripts test --env=jsdom --setupFiles dotenv/config --verbose",
        "start": "react-scripts start",
        "build": "react-scripts build && gzipper compress --verbose ./build",
        "lint": "eslint ./src/**/*.ts ./src/**/*.tsx",
        "lint-fix": "eslint --fix",
        "sonar": "sonar-scanner"
    },
    "jest": {
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "collectCoverageFrom": [
            "*/**/*.ts",
            "*/**/*.tsx"
        ],
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\](?!lodash-es|react-syntax-highlighter/).+\\.js$"
        ],
        "moduleNameMapper": {
            "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./__mocks__/fileMock.ts",
            "^.+\\.(min.css|css|less|scss|sass)$": "identity-obj-proxy"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "post-commit": "git update-index -g"
        }
    }
}
